from fastapi import FastAPI, Request, Form, status
from fastapi.responses import HTMLResponse, RedirectResponse, FileResponse, PlainTextResponse
from fastapi.staticfiles import StaticFiles
from fastapi.templating import Jinja2Templates
import os, sqlite3, tempfile
from datetime import datetime
from typing import Optional
from pdf_os_premium import gerar_pdf_os_premium

APP_DIR = os.path.dirname(os.path.abspath(__file__))
DB_PATH  = os.path.join(APP_DIR, "tiextremo_os.db")
UPLOAD_DIR = os.path.join(APP_DIR, "uploads")
os.makedirs(UPLOAD_DIR, exist_ok=True)

app = FastAPI(title="TI Extremo OS (staging)")
app.mount("/static", StaticFiles(directory=os.path.join(APP_DIR, "static")), name="static")
app.mount("/uploads", StaticFiles(directory=UPLOAD_DIR), name="uploads")
templates = Jinja2Templates(directory=os.path.join(APP_DIR, "templates"))

def db():
    con = sqlite3.connect(DB_PATH)
    con.row_factory = sqlite3.Row
    return con

def os_code_from(id_: int, created_iso: Optional[str]) -> str:
    try:
        year = datetime.fromisoformat(created_iso).year if created_iso else datetime.now().year
    except Exception:
        year = datetime.now().year
    return f"OS-{year}-{id_:06d}"

def init_db():
    con = db(); cur = con.cursor()
    # Tabela os (garante colunas cep/numero caso faltem)
    cur.execute("""
    CREATE TABLE IF NOT EXISTS os (
        id INTEGER PRIMARY KEY AUTOINCREMENT,
        cliente TEXT NOT NULL,
        telefone TEXT,
        email TEXT,
        endereco TEXT,
        equipamento TEXT,
        modelo TEXT,
        serial TEXT,
        status TEXT DEFAULT 'Aberta',
        problema TEXT NOT NULL,
        anexo TEXT,
        created_at TEXT DEFAULT CURRENT_TIMESTAMP,
        os_code TEXT
    )""")
    for col, ddl in [
        ("cep", "ALTER TABLE os ADD COLUMN cep TEXT"),
        ("numero", "ALTER TABLE os ADD COLUMN numero TEXT")
    ]:
        try:
            cur.execute(f"SELECT {col} FROM os LIMIT 1")
        except sqlite3.OperationalError:
            cur.execute(ddl)

    # Tabelas de orçamento
    cur.execute("""
    CREATE TABLE IF NOT EXISTS orcamentos (
        id INTEGER PRIMARY KEY AUTOINCREMENT,
        os_id INTEGER NOT NULL,
        data_criacao TEXT DEFAULT CURRENT_TIMESTAMP,
        status TEXT DEFAULT 'pendente',
        desconto REAL DEFAULT 0.0,
        observacoes TEXT,
        FOREIGN KEY (os_id) REFERENCES os(id)
    )""")
    cur.execute("""
    CREATE TABLE IF NOT EXISTS orcamento_itens (
        id INTEGER PRIMARY KEY AUTOINCREMENT,
        orcamento_id INTEGER NOT NULL,
        descricao TEXT NOT NULL,
        quantidade INTEGER DEFAULT 1,
        valor_unitario REAL DEFAULT 0.0,
        FOREIGN KEY (orcamento_id) REFERENCES orcamentos(id)
    )""")
    con.commit(); con.close()
init_db()

@app.get("/health", response_class=PlainTextResponse)
def health():
    return "OK"

def get_orcamento(con, os_id:int):
    orc = con.execute(
        "SELECT * FROM orcamentos WHERE os_id=? ORDER BY id DESC LIMIT 1",
        (os_id,)
    ).fetchone()
    if not orc:
        con.execute("INSERT INTO orcamentos (os_id) VALUES (?)", (os_id,))
        con.commit()
        orc = con.execute(
            "SELECT * FROM orcamentos WHERE os_id=? ORDER BY id DESC LIMIT 1",
            (os_id,)
        ).fetchone()
    itens = con.execute(
        "SELECT * FROM orcamento_itens WHERE orcamento_id=? ORDER BY id",
        (orc["id"],)
    ).fetchall()
    subtotal = sum((r["quantidade"] or 0) * (r["valor_unitario"] or 0.0) for r in itens)
    desconto = orc["desconto"] or 0.0
    total = max(0.0, subtotal - desconto)
    return dict(orc), [dict(i) for i in itens], subtotal, desconto, total

# ---- ROTAS ----
@app.get("/", response_class=HTMLResponse)
def index(request: Request):
    return templates.TemplateResponse("index.html", {"request": request})

@app.get("/os/nova", response_class=HTMLResponse)
def os_nova_form(request: Request):
    return templates.TemplateResponse("nova_os.html", {"request": request})

@app.post("/os/nova")
async def os_nova_post(
    cliente: str = Form(...),
    telefone: str = Form(""),
    email: str = Form(""),
    cep: str = Form(""),
    endereco: str = Form(""),
    numero: str = Form(""),
    equipamento: str = Form(""),
    modelo: str = Form(""),
    serial: str = Form(""),
    problema: str = Form(...)
):
    con = db(); cur = con.cursor()
    cur.execute("""INSERT INTO os (cliente, telefone, email, cep, endereco, numero, equipamento, modelo, serial, problema)
                   VALUES (?, ?, ?, ?, ?, ?, ?, ?, ?, ?)""",
                (cliente, telefone, email, cep, endereco, numero, equipamento, modelo, serial, problema))
    con.commit(); os_id = cur.lastrowid
    cur.execute("INSERT INTO orcamentos (os_id) VALUES (?)", (os_id,))
    con.commit(); con.close()
    return RedirectResponse(url=f"/os/ver/{os_id}", status_code=status.HTTP_303_SEE_OTHER)

@app.get("/os/listar", response_class=HTMLResponse)
def os_listar(request: Request):
    con = db()
    rows = con.execute("SELECT * FROM os ORDER BY id DESC").fetchall()
    con.close()
    lista = []
    for row in rows:
        d = dict(row); d["os_code"] = os_code_from(d["id"], d.get("created_at"))
        lista.append(d)
    return templates.TemplateResponse("listar_os.html", {"request": request, "os_list": lista})

@app.get("/os/ver/{os_id}", response_class=HTMLResponse)
def os_ver(os_id: int, request: Request):
    con = db()
    row = con.execute("SELECT * FROM os WHERE id = ?", (os_id,)).fetchone()
    if not row:
        con.close(); return HTMLResponse("OS não encontrada.", status_code=404)
    dados = dict(row); dados["os_code"] = os_code_from(dados["id"], dados.get("created_at"))
    orc, itens, subtotal, desconto, total = get_orcamento(con, os_id)
    con.close()
    return templates.TemplateResponse("os_ver.html", {
        "request": request, "os": dados,
        "itens": itens, "subtotal": subtotal, "desconto": desconto, "total": total
    })

@app.get("/os/editar/{os_id}", response_class=HTMLResponse)
def os_editar_form(os_id:int, request:Request):
    con = db(); row = con.execute("SELECT * FROM os WHERE id=?", (os_id,)).fetchone(); con.close()
    if not row: return HTMLResponse("OS não encontrada.", status_code=404)
    dados = dict(row); dados["os_code"] = os_code_from(dados["id"], dados.get("created_at"))
    return templates.TemplateResponse("os_editar.html", {"request": request, "os": dados})

@app.post("/os/editar/{os_id}")
async def os_editar_post(os_id:int,
    cliente: str = Form(...),
    telefone: str = Form(""),
    email: str = Form(""),
    cep: str = Form(""),
    endereco: str = Form(""),
    numero: str = Form(""),
    equipamento: str = Form(""),
    modelo: str = Form(""),
    serial: str = Form(""),
    status_os: str = Form("Aberta"),
    problema: str = Form(...)
):
    con = db()
    con.execute("""UPDATE os SET cliente=?, telefone=?, email=?, cep=?, endereco=?, numero=?, equipamento=?, modelo=?, serial=?, status=?, problema=? WHERE id=?""",
        (cliente, telefone, email, cep, endereco, numero, equipamento, modelo, serial, status_os, problema, os_id))
    con.commit(); con.close()
    return RedirectResponse(url=f"/os/ver/{os_id}", status_code=status.HTTP_303_SEE_OTHER)

@app.post("/os/excluir/{os_id}")
async def os_excluir(os_id:int):
    con = db()
    orc = con.execute("SELECT id FROM orcamentos WHERE os_id=?", (os_id,)).fetchone()
    if orc:
        con.execute("DELETE FROM orcamento_itens WHERE orcamento_id=?", (orc["id"],))
        con.execute("DELETE FROM orcamentos WHERE id=?", (orc["id"],))
    con.execute("DELETE FROM os WHERE id=?", (os_id,))
    con.commit(); con.close()
    return RedirectResponse(url="/os/listar", status_code=status.HTTP_303_SEE_OTHER)

@app.post("/orcamento/{os_id}/add_item")
async def orc_add_item(os_id:int, descricao:str = Form(...), quantidade:int = Form(...), valor_unitario:float = Form(...)):
    con = db()
    orc = con.execute("SELECT * FROM orcamentos WHERE os_id=? ORDER BY id DESC LIMIT 1", (os_id,)).fetchone()
    if not orc:
        con.execute("INSERT INTO orcamentos (os_id) VALUES (?)", (os_id,)); con.commit()
        orc = con.execute("SELECT * FROM orcamentos WHERE os_id=? ORDER BY id DESC LIMIT 1", (os_id,)).fetchone()
    con.execute("INSERT INTO orcamento_itens (orcamento_id, descricao, quantidade, valor_unitario) VALUES (?,?,?,?)",
        (orc["id"], descricao, quantidade, valor_unitario))
    con.commit(); con.close()
    return RedirectResponse(url=f"/os/ver/{os_id}", status_code=status.HTTP_303_SEE_OTHER)

@app.post("/orcamento/{os_id}/del_item/{item_id}")
async def orc_del_item(os_id:int, item_id:int):
    con = db(); con.execute("DELETE FROM orcamento_itens WHERE id=?", (item_id,)); con.commit(); con.close()
    return RedirectResponse(url=f"/os/ver/{os_id}", status_code=status.HTTP_303_SEE_OTHER)

@app.post("/orcamento/{os_id}/desconto")
async def orc_set_desconto(os_id:int, desconto:float = Form(0.0)):
    con = db()
    orc = con.execute("SELECT * FROM orcamentos WHERE os_id=? ORDER BY id DESC LIMIT 1", (os_id,)).fetchone()
    if orc:
        con.execute("UPDATE orcamentos SET desconto=? WHERE id=?", (desconto, orc["id"])); con.commit()
    con.close()
    return RedirectResponse(url=f"/os/ver/{os_id}", status_code=status.HTTP_303_SEE_OTHER)

@app.get("/os/pdf/{os_id}")
def os_pdf(os_id: int):
    con = db(); row = con.execute("SELECT * FROM os WHERE id = ?", (os_id,)).fetchone()
    if not row:
        con.close(); return HTMLResponse("OS não encontrada", status_code=404)
    dados = dict(row); dados["os_code"] = os_code_from(dados["id"], dados.get("created_at"))
    orc, itens, subtotal, desconto, total = get_orcamento(con, os_id); con.close()

    tmpdir = tempfile.mkdtemp(prefix="os_pdf_")
    filename = f"{dados.get('os_code','OS')}.pdf"
    full_path = os.path.join(tmpdir, filename)
    dados_pdf = {**dados, "orcamento": {"itens": itens, "subtotal": subtotal, "desconto": desconto, "total": total}}
    gerar_pdf_os_premium(dados_pdf, full_path)
    return FileResponse(full_path, media_type="application/pdf", filename=filename)

if __name__ == "__main__":
    import uvicorn
    uvicorn.run(app, host="127.0.0.1", port=8012)
